@model StudentRegisterViewModel

<div class="container">
    <div class="pt-85 pb-90">
        <div class="container">
            <div class="row">
                <div class="col-lg-7 col-md-12 ml-auto mr-auto">
                    <div class="register-wrapper">
                        <div class="register-tab-list nav">
                            <a class="active">
                                <h4> ورود </h4>
                            </a>
                        </div>

                        <div class="register-area tab-content " dir="rtl" style="text-align: start">

                            <div class="tab-pane active" style="">

                                <div class="login-form-container rounded-xl">

                                    <div class="register-form">

                                        <form>

                                            <div class="text-danger"></div>

                                            <div class="form-group">
                                                <label asp-for="StudentId" class="control-label"></label>
                                                <input type="text" id="StudentIdInput" class="form-control" />

                                                <span id="StudentIdCheck" class="text-danger"></span>

                                            </div>
                                            <div class="form-group">
                                                <label asp-for="NationalNo" class="control-label"></label>
                                                <input type="text" id="StudentNoInput" class="form-control" />

                                                <span id="StudentNationalNoCheck" class="text-danger"></span>

                                            </div>

                                            <a id="StudentLogin" class="btn btn-block btn-lg btn-magenta shadow-lg text-white">ورود</a>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <link href="~/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/Sweetalert2/sweetalert2.min.js"></script>
    <script src="~/js/Index-min.js"></script>

}